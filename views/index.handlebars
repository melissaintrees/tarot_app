<div id="home">     
      <div class="main-buttons">
      <form class="create-form" action="/" method="POST">
          <button type="submit" class="btn btn-secondary mb-2">Shuffle</button>
        </form>
    </div>
       <div class="col-12">
        <div class="album py-5 bg-light">
          <div class="container">
            
            <div class="row">
         
                  {{#each cards}}     
                  <div class="card col-md-3 d-flex text-white">
                  <img class=" card-img-top card-img" src="{{img_link}}">
                  {{!-- <div class="card-deck"> --}}
                    <div class="card-img-overlay">
                      <h2 class="card-title">{{card_name}}</h2>
                      <p class="card-text">{{meaning_up}}</p>
                      <a class="btn btn-outline-light" href="#">Pick</a>
                    </div>
                    </div>
                  {{/each}}
                  </div>
            </div>
            </div>
          </div>
    

      </div>
    </div>


